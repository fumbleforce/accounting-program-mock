*:not(i)
  transition: color 0.2s, background 0.2s
  font-family: 'Open Sans', sans-serif !important

html, body
  color: #444
  margin: 0
  padding: 0
  min-height: 100%

.layout
  display: flex
  min-height: 100%

  .sidebar
    flex: none
    width: 250px
    min-height: 100%

    .ui.header
      padding: 2rem
      margin: 0
      background: #6435C9!important
      color: #fff
    .menu
      min-height: 100%

  .main
    flex: 1 0 auto
    background: #fff
