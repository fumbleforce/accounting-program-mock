script.
  google.charts.load('current', {'packages':['sankey']});
  google.charts.setOnLoadCallback(drawChart);

  function drawChart() {
    var data = new google.visualization.DataTable();
    data.addColumn('string', 'From');
    data.addColumn('string', 'To');
    data.addColumn('number', 'Money');
    data.addRows([
      [ 'Inntekt', 'Sparing', 2 ],
        [ 'Sparing', 'Fond', 1 ],
        [ 'Sparing', 'Sparekonto', 1 ],
      [ 'Inntekt', 'Faste utgifter', 7 ],
        [ 'Faste utgifter', 'Leie', 5 ],
        [ 'Faste utgifter', 'Strøm', 2 ],
      [ 'Inntekt', 'Variable utgifter', 12 ],
        [ 'Variable utgifter', 'Mat', 4],
        [ 'Variable utgifter', 'Underholdning', 4],
        [ 'Variable utgifter', 'Transport', 4],
    ]);

    // Sets chart options.
    var options = {};

    // Instantiates and draws our chart, passing in some options.
    var chart = new google.visualization.Sankey(document.getElementById('sankey_basic'));
    chart.draw(data, options);
  }